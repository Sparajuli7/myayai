{
  "manifest_version": 3,
  "name": "MyAyAI - AI Prompt Optimizer",
  "version": "1.0.0",
  "description": "Optimize your AI prompts across all major AI platforms for better results and productivity.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "background",
    "notifications"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://www.perplexity.ai/*",
    "https://gemini.google.com/*",
    "https://copilot.microsoft.com/*",
    "https://poe.com/*",
    "https://character.ai/*",
    "https://*.openai.com/*",
    "https://*.anthropic.com/*",
    "https://*.google.com/*",
    "https://*.microsoft.com/*",
    "https://*.quora.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://www.perplexity.ai/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://poe.com/*",
        "https://character.ai/*"
      ],
      "js": [
        "utils/logger.js",
        "utils/error-handler.js",
        "utils/health-monitor.js",
        "ui/fallback-ui.js",
        "content/platform-detectors.js",
        "content/ui-injector.js", 
        "content/content-script.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "MyAyAI - Optimize Your Prompts",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ui/*",
        "styles/*",
        "assets/*"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://www.perplexity.ai/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://poe.com/*",
        "https://character.ai/*"
      ]
    }
  ],
  "minimum_chrome_version": "96",
  "author": "MyAyAI Team",
  "homepage_url": "https://myayai.com",
  "short_name": "MyAyAI",
  "options_page": "popup/options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  }
}
