{
  "name": "myayai-extension",
  "version": "1.0.0",
  "description": "AI Prompt Optimization Chrome Extension",
  "main": "background/service-worker.js",
  "scripts": {
    "dev": "webpack --config build/webpack.config.js --env development --watch",
    "dev:hot": "webpack serve --config build/webpack.config.js --env development --hot --open",
    "build": "npm run clean && webpack --config build/webpack.config.js --mode production",
    "build:chrome": "webpack --config build/webpack.config.js --env browser=chrome --mode production",
    "build:firefox": "webpack --config build/webpack.config.js --env browser=firefox --mode production",
    "build:edge": "webpack --config build/webpack.config.js --env browser=chrome --mode production && npm run copy:edge",
    "build:brave": "webpack --config build/webpack.config.js --env browser=chrome --mode production && npm run copy:brave",
    "build:opera": "webpack --config build/webpack.config.js --env browser=chrome --mode production && npm run copy:opera",
    "build:safari": "webpack --config build/webpack.config.js --env browser=safari --mode production",
    "build:all": "node scripts/build-all.js",
    "copy:edge": "cp -r dist/chrome dist/edge",
    "copy:brave": "cp -r dist/chrome dist/brave", 
    "copy:opera": "cp -r dist/chrome dist/opera",
    "clean": "rimraf dist/",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:performance": "jest tests/performance",
    "test:accessibility": "jest tests/accessibility",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "validate": "npm run lint && npm run format:check && npm run test:all && npm run size-check",
    "pack": "node scripts/pack-extension.js",
    "pack:chrome": "node scripts/pack-extension.js --browsers chrome",
    "pack:firefox": "node scripts/pack-extension.js --browsers firefox",
    "pack:all": "npm run build:all && npm run pack",
    "validate:firefox": "web-ext lint --source-dir=dist/firefox",
    "serve:firefox": "web-ext run --source-dir=dist/firefox --browser-console",
    "analyze": "webpack-bundle-analyzer dist/chrome/js/*.js",
    "size-check": "bundlesize",
    "performance:audit": "node scripts/performance-audit.js",
    "accessibility:audit": "node scripts/accessibility-audit.js",
    "security:audit": "npm audit --audit-level=moderate",
    "release:prepare": "npm run validate && npm run build:all && npm run pack:all",
    "prebuild": "npm run clean",
    "prepack": "npm run build:all",
    "postinstall": "echo 'MyAyAI Extension build system ready! Run npm run build:all to get started.'"
  },
  "dependencies": {
    "marked": "^9.1.2",
    "dompurify": "^3.0.5"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.8.0",
    "@types/dompurify": "^3.0.3",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "babel-loader": "^9.1.3",
    "bundlesize": "^0.18.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.51.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "web-ext": "^7.8.0",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/myayai/chrome-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "prompt-optimization",
    "chatgpt",
    "claude",
    "gemini",
    "productivity"
  ],
  "author": "MyAyAI Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/myayai/chrome-extension/issues"
  },
  "homepage": "https://myayai.com",
  "browserslist": [
    "Chrome >= 96",
    "Firefox >= 109"
  ],
  "bundlesize": [
    {
      "path": "dist/chrome/background/*.js",
      "maxSize": "100KB"
    },
    {
      "path": "dist/chrome/content/*.js",
      "maxSize": "150KB"
    },
    {
      "path": "dist/chrome/popup/*.js",
      "maxSize": "200KB"
    }
  ]
}
